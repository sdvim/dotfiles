# fi

# Convenience functions
claude_waiting() { ~/.claude-tmux-wrapper.sh waiting; }
claude_complete() { ~/.claude-tmux-wrapper.sh complete; }
claude_thinking() { ~/.claude-tmux-wrapper.sh thinking; }