command = /bin/zsh -c "tmux new -A -s home"

confirm-close-surface = false
initial-window = false
shell-integration = zsh

copy-on-select = true
clipboard-read = allow
clipboard-write = allow
clipboard-paste-protection = false

adjust-cell-height = 0%
font-family = BerkeleyMono Nerd Font
font-size = 12
font-thicken = false

quick-terminal-position = center
quick-terminal-animation-duration = 0

window-width = 48
window-height = 8
window-padding-x = 0
window-padding-y = 0
window-padding-color = extend
window-padding-balance = true
window-decoration = false
window-theme = system
window-colorspace = display-p3

# Desktop notifications for Claude
desktop-notifications = true

# Link detection and clicking
link-url = true

# Show quick terminal
keybind = global:ctrl+'=toggle_quick_terminal

# New line
keybind = shift+enter=text:\n

# Ignore default behavior for opening settings in TextEdit
keybind = cmd+,=ignore

# Scroll page down
keybind = cmd+d=scroll_page_lines:20

# Scroll page up
keybind = cmd+u=scroll_page_lines:-20

# Delete line
keybind = super+backspace=esc:w

#
# tmux config with leader key Ctrl+B
# Inspired by @oca159's config
# https://gist.github.com/oca159/5124a22012b1887bbf2b6e2cc1f9e574

# tmux: Select Window (Cmd+{N} : Ctrl+B+{N})
keybind = super+one=text:\x02\x31
keybind = super+two=text:\x02\x32
keybind = super+three=text:\x02\x33
keybind = super+four=text:\x02\x34
keybind = super+five=text:\x02\x35
keybind = super+six=text:\x02\x36
keybind = super+seven=text:\x02\x37
keybind = super+eight=text:\x02\x38
keybind = super+nine=text:\x02\x39

# tmux: New Window (Cmd+T : Ctrl+B+C)
keybind = super+t=text:\x02\x63

# tmux: Close Pane (Cmd+W : Ctrl+B+X) (Custom keybinding)
keybind = super+w=text:\x02\x78

# tmux: Switch Window (Cmd+P : Ctrl+B+W) (Using tmux-fzf)
keybind = super+p=text:\x02\x77

# tmux: Rename Window (Cmd+R : Ctrl+B+,)
keybind = super+r=text:\x02\x2c


# tmux: Previous Window (Cmd+Shift+[ : Ctrl+B+P) - Browser-style
keybind = super+shift+left_bracket=text:\x02\x70

# tmux: Next Window (Cmd+Shift+] : Ctrl+B+N) - Browser-style
keybind = super+shift+right_bracket=text:\x02\x6e

# tmux: Previous Pane (Cmd+[ : Ctrl+B+;) - Last pane
keybind = super+left_bracket=text:\x02\x3b

# tmux: Next Pane (Cmd+] : Ctrl+B+o) - Cycle panes
keybind = super+right_bracket=text:\x02\x6f

# tmux: Split Down (Cmd+Shift+D : Ctrl+B+")
keybind = super+shift+d=text:\x02\x22

# tmux: Split Right (Cmd+Shift+R : Ctrl+B+%)
keybind = super+shift+r=text:\x02\x25

# tmux: Toggle Pane Zoom (Cmd+Z : Ctrl+B+Z)
keybind = super+z=text:\x02\x7a

# tmux: Move Window Left (Cmd+I : Alt+I) (Custom keybinding)
keybind = super+i=text:\x1bi

# tmux: Move Window Right (Cmd+O : Alt+O) (Custom keybinding)
keybind = super+o=text:\x1bo
